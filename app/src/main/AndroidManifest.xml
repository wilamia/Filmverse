<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/ic_splashscreen_logo"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FilmVerse"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Activities.HistoryActivity"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi"
            android:screenOrientation="fullSensor"
            android:exported="false" />
        <activity
            android:name=".Activities.VideoPlayerTrailerActivity"
            android:exported="false"
            android:screenOrientation="landscape"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.SearchFilterActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.SearchActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.FavouriteActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.GenreFilmActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.RecoverPasswordActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.SettingsActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.AccountActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.SignUpActivity"
            android:exported="false"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".Activities.VideoPlayerActivity"
            android:screenOrientation="landscape"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:configChanges="orientation|screenSize"
            android:resizeableActivity="true"
            android:supportsPictureInPicture="true"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.DetailActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            tools:ignore="DiscouragedApi" />
        <activity
            android:name=".Activities.MainActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi">
        </activity>
        <activity
            android:name=".Activities.LoginActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".Activities.IntroActivity"
            android:exported="true"
            android:screenOrientation="fullSensor"
            android:configChanges="orientation|screenSize"
            tools:ignore="DiscouragedApi">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>